{
  "files": {
    "include": ["*.json", "*.js", "*.ts"],
    "ignore": [
      "./dist",
      "./package.json",
      "./test/vendor/bun-types-workaround.d.ts"
    ]
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off"
      }
    }
  }
}
